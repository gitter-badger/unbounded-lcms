<body class="c-pdf-cover__wrap" onload="subst()">
  <div class="c-pdf-cover--<%= content_guide.subject %>">
    <div class="c-pdf-cover">
      <div class="c-pdf-cover__img" style='background-image: <%= cover_image_url %>'></div>
      <div class="c-pdf-cover__content">
        <div class="c-pdf-cover__title">
          <h1><%= simple_format(content_guide.title) %></h1>
          <h2><%= content_guide.teaser %></h2>
          <div class="c-pdf-timestamp">
            Generated on <%= Time.now.strftime("%B %d, %Y") %>
          </div>
        </div>
        <div class="c-pdf-cover__logo">
          <span class="c-pdf-logo--u">Unbound</span><span class="c-pdf-logo--ed">Ed</span>
        </div>
      </div>
    </div>
  </div>
</body>
