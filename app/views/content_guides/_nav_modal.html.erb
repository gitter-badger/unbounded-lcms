<div id="cg-contents-modal" class="o-contents-modal o-page--cg-<%= cg.subject %>" data-reveal>
  <div class="o-sidebar-xs cs-bg--<%= cg.subject %>-base o-sidebar-xs--modal">
    <div class="o-sidebar-xs__header">
      <div class="u-txt--cg-sidebar-title-type u-text--uppercase">
        <%= cg.sticky_title %>
      </div>
      <div class="u-txt--cg-sidebar-title">
        <%= cg.title %>
      </div>
    </div>
    <div class="o-sidebar-xs__action">
      <a data-close><i class="ub-ellipsis fa-3x"></i></a>
    </div>
  </div>
  <ul id="cg-menu-modal" class="o-sidebar-nav o-sidebar-nav--show o-sidebar-nav__menu o-contents-modal__content vertical menu" data-accordion-menu>
    <li class=o-sidebar-nav__header><span><%= t('ui.contents') %></span></li>
    <li><div class=o-sidebar-nav__sep></div></li>
    <% cg.headings.each do |heading| %>
      <%= render 'nav_item_modal', heading: heading %>
    <% end %>
  </ul>
</div>
