<% set_page_title @content_guide.title %>

<% cache("content_guides/views/index/html/#{@params_cache_key}") do %>
  <div class="o-page o-page--margin-to-bottom o-page--cg">
    <div class="o-page__module">
      <%= link_to t('content_guide_page.back_to_hub'), '#', class: 'o-btn--dark o-btn--bordered o-btn--expand o-page__section u-margin-bottom--base .u-text--capitalized'%>
    </div>
    <div class="o-page__module c-ch-hero">
      <div class="o-page__wrap--row">
        <div class="c-cg-hero__img"></div>
        <div class="c-cg-hero__body">
          <div>
            <%= t(@content_guide.subject, scope: :subjects) if @content_guide.subject %>

            <% @content_guide.grade_list.each do |grade| %>
              <span class=c-cg-grade><%= grade %></span>
            <% end %>

            <%= t('.curriculum_guide') %>
          </div>
          <h1><%= @content_guide.title %></h1>
          <h2><%= @content_guide.teaser %></h2>
          <div class="u-margin-top--small">
            <%= link_to t('resources.btn.download', title: 'Guide'), url_for(format: 'pdf'), class: 'o-ub-btn' %>
            <%= link_to t('content_guide_page.related'), '#', class: 'o-ub-btn o-ub-btn--bordered' %>
          </div>
        </div>
      </div>
    </div>
    <div class="o-page__module u-bg--light c-ch-content">
      <div class="o-page__wrap--row">
        <div class="c-ch-content__sidebar">
          <%= render partial: 'nav', locals: { headings: @content_guide.headings } %>
        </div>
        <div id="c-ch-content" class="c-ch-content__body">
          <% if @content_guide.broken_images.any? %>
            <div class='callout warning'>
              <p><%= t('.broken_images') %>
            </div>
          <% end %>
          <%= @content_guide.html %>
        </div>
      </div>
    </div>
  </div>
<% end %>

