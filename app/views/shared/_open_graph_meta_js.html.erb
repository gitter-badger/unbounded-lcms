<script type="text/javascript" data-turbolinks-eval="always">
  $("meta[property='og:title']").attr('content', "<%= content_for(:og_title) || page_title %>");
  $("meta[property='og:description'], meta[name='description']").attr('content', "<%= content_for(:og_description) || page_description %>");
  $("meta[property='og:url']").attr('content', "<%= request.original_url %>");
  $("meta[property='og:image']").attr('content', "<%= page_og_image %>");

  if (typeof addthis_share === 'undefined') {
     addthis_share = {};
  }

  addthis_share['url'] = "<%= request.original_url %>";
  addthis_share['title'] = "<%= content_for(:og_title) || page_title %>";
  addthis_share['description'] = "<%= content_for(:og_description) || page_description %>";
  addthis_share['image'] = "<%= page_og_image %>";
</script>
