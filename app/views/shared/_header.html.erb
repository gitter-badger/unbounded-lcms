<header class="c-header">
  <div class="o-page">
    <div class="o-top-bar">
      <div class="o-top-bar__item c-header-title">
        <%= link_to root_path, class: 'c-header-title__logo c-header__link' do %>
          <%= image_tag('logo.svg') %>
        <% end %>
        <span class="c-header-title__h-menu" data-responsive-toggle="navbar" data-hide-for="large">
          <span class="c-header-title__h-icon c-header__link" data-toggle>
            <i class="fa-2x ub-menu" aria-hidden="true"></i>
          </span>
        </span>
      </div>
      <div class="o-top-bar__wrapper" id="navbar">
        <div class="o-top-bar__item">
          <ul class="menu c-header__menu">
            <%= nav_link t('nav.curriculum_html'), explore_curriculum_index_path, class: "c-header__link #{active_class_resource(:resources, :show)}" %>
            <%= nav_link t('nav.lessons_html'), find_lessons_path, class: "c-header__link" %>
            <%= nav_link t('nav.instructions_html'), enhance_instruction_index_path, class: "c-header__link #{active_class_resource(:resources, :media)} #{active_class_resource(:content_guides, :show)}" %>
            <%= nav_link t('nav.about_html'), about_path, class: "c-header__link #{active_class(about_people_path)}" %>
          </ul>
        </div>
        <div class="o-top-bar__item">
          <ul class="menu c-header__left-menu">
            <li class="c-header__link">
              <%= link_to search_path do %>
                <i class="fa-2x ub-search"></i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>
