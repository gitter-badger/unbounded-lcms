<svg width="<%= size[:width] %>" height="<%= size[:height] %>" xmlns="http://www.w3.org/2000/svg" xmlns:svg="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">

 <g>
  <title>UnboundEd</title>
  <rect fill="<%= color_code %>" x="0" y="0" width="<%= size[:width] %>" height="<%= size[:height] %>" />
  <rect fill="#000000" opacity="0.3" x="0" y="<%= size[:height] - 100 %>" width="<%= size[:width] %>" height="100"/>
  <image xlink:href="<%= asset_path('logo.svg') %>" x="<%= style[:padding] %>" y="<%= size[:height] - 75 %>" width="280" height="50" />
  <text text-anchor="left" font-family="Serif" font-size="<%= style[:font_size] %>" fill="#ffffff" x="<%= style[:padding] %>" y="<%= 2 * style[:padding] %>">
    <tspan font-weight="bolder"><%= content_type %></tspan> &middot;
    <tspan><%= subject_and_grade %></tspan>
  </text>
  <text text-anchor="left" font-family="Serif" font-size="<%= style[:font_size_big] %>" fill="#ffffff" x="<%= style[:padding] %>" y="<%= title_top_margin %>">
    <% title_sentences[0...number_of_lines].each do |sentence| %>
      <tspan x="<%= style[:padding] %>" dy="1.2em"><%= sentence %></tspan>
    <% end %>
    <% if title_sentences.size > number_of_lines %>
      <tspan font-size="<%= 0.5 * style[:font_size_big] %>">...</tspan>
    <% end %>
  </text>
 </g>
</svg>
