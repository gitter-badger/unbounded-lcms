<%= javascript_include_tag 'initializers/lessons' %>

<%# set_page_title @lesson_document.teaser.html_safe %>
<%# set_social_media_sharing @lesson_document %>

<%# if (permalink = @lesson_document.permalink).present? %>
  <%# set_canonical_url lesson_document_path(permalink, slug: @lesson_document.slug) %>
<%# end %>

<div class="o-page o-page--margin-to-bottom o-page--cg o-page--cg-<%#= @lesson_document.subject %>" data-scroll="cg-page" id="cg-page">
  <div class="o-page__module u-margin-bottom--gutter">
    <%#= link_to :enhance_instruction_index, class: 'o-btn o-btn--base o-btn--xs-full' do %>
      <i class="fa-lg ub-arrow-left u-text--middled"></i> <%#= t('lesson_document_page.back_to_hub') %>
    <%# end %>
  </div>
  <div class="o-page__module c-ch-hero">
    <div class="o-page__wrap--row">
      <div class=c-cg-hero__img style="background-image: url('<%#= @lesson_document.small_photo.url %>')">
        <div class=content>
        </div>
      </div>
      <div class="c-cg-hero__body cs-bg--<%#= @lesson_document.color_code(@lesson_document.grade_avg) %>">
        <div class=c-cg-teaser><%#= @lesson_document.teaser %></div>
        <h1 class=c-cg-title><%#= simple_format @lesson_document.title %></h1>
        <div class="u-margin-top--small">
          <%#= link_to t('resources.btn.download', title: 'Guide'), lesson_document_pdf_path(@lesson_document), class: 'o-ub-btn c-cg-btn-download', data: { no_turbolink: true } %>
        </div>
      </div>
    </div>
  </div>
  <div class="o-page__module u-bg--light c-cg-content">
    <div class="o-page__wrap--row">
      <div class="c-cg-content__sidebar">
        <%#= lesson_document_nav(@lesson_document) %>
      </div>
      <div id="c-ch-content" class="c-cg-content__body">
        <%# if @lesson_document.broken_images.any? %>
          <div class='callout warning'>
            <p><%#= t('.broken_images') %>
          </div>
        <%# end %>
        <%#= render partial: 'faq', locals: { cg: @lesson_document } if @lesson_document.faq.present? %>
        <%= @lesson_document.content.html_safe %>
      </div>
    </div>
  </div>
</div>
<a href="#" class="o-top-scroll-button"><i class="ub-angle-down"></i></a>
