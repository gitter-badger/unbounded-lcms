<% set_page_title @lesson_document.metadata['title'].to_s.html_safe %>

<div class="o-page o-page--margin-to-bottom o-page--cg o-page--cg-<%= @lesson_document.subject %>" data-scroll="cg-page" id="cg-page">
  <%if user_signed_in? %>
    <div class="o-page__module u-margin-bottom--gutter">
      <%= link_to [:admin, :lesson_documents], class: 'o-btn o-btn--base o-btn--xs-full' do %>
        <i class="fa-lg ub-arrow-left u-text--middled"></i> Go to Lessons Admin
      <% end %>
    </div>
  <% end %>
  <%= render 'header', lesson_document: @lesson_document, curriculum: @curriculum, props: @props if @curriculum.present? %>
  <%= render 'content', lesson_document: @lesson_document %>
  <div class="c-footer__item u-txt--footer-links">
    <%= @lesson_document.metadata['cc-attribution'] %>
  </div>
</div>
<a href="#" class="o-top-scroll-button"><i class="ub-angle-down"></i></a>
