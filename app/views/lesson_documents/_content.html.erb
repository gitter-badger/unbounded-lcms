<div class="o-page__module u-bg--light c-ld">
  <div class="o-page__wrap--row">
    <% unless request[:action].index('export') %>
      <div class="c-ld__sidebar">
        <%= render 'lesson_documents/nav', lesson_document: lesson_document %>
      </div>
    <% end %>
    <div id="c-ch-content" class="c-ld__body c-ld__body--general">
      <% if lesson_document.description.present? %>
        <h2>Lesson Summary</h2>
        <p><%= raw lesson_document.description %></p>
      <% end %>
      <%= raw lesson_document.content %>
      <%= render 'print_export', lesson_document: lesson_document %>
    </div>
  </div>
</div>
