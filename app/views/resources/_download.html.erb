<li>
  <% if download.download.attachment_content_type == 'pdf' %>
    <span>
      <%= link_to preview_download_path(id: download, slug: resource.slug), data: { no_turbolink: true }, target: '_blank' do %>
        <i class="ub-icon ub-eye" aria-hidden="true"></i>
      <% end %>
    </span>
  <% end %>
  <i class="ub-icon fa-lg file-<%= "#{file_icon(download.download.attachment_content_type)} #{indent}" %>"></i>
  <span>
    <%= link_to(download.download.title,
                download_path(download, slug: resource.slug),
                class: 'resource-attachment', data: { no_turbolink: true }) %>
  </span>
</li>
