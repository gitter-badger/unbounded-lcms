<h2 class="u-padding-top--xlarge" id="print-export-all">Download / Print All Materials</h2>
<p>Click the button below to preview and download this entire <%= document.doc_type %> as a PDF. Other formats will be forthcoming.
</p>
<div>
<% if document.links['pdf'].present? %>
  <%= link_to t("ui.export_pdf"), document.links['pdf'], class: 'o-ub-btn o-ub-btn--yellow materials-all',
              data: { no_turbolink: true, contenttype: 'full', context: 'pdf', customtitle: t('ui.export_custom_pdf'), href: document.links['pdf'] },
              target: '_blank' %>
<% end %>
<% if document.links['gdoc_full'].present? %>
  <%= link_to t('ui.export_gdoc'), document.links['gdoc_full'], class: 'o-ub-btn o-ub-btn--yellow materials-all',
              data: { no_turbolink: true, contenttype: 'full', context: 'gdoc', customtitle: t('ui.export_custom_gdoc'), href: document.links['gdoc_full'] },
              target: '_blank' %>
<% end %>
</div>

