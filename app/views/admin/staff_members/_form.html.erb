<% url = @staff_member.new_record? ? :admin_staff_members : admin_staff_member_path(@staff_member) %>

<%= simple_form_for @staff_member, url: url do |f| %>
  <%= f.input :name %>
  <%= f.input :position %>
  <%= f.input :department %>
  <%= f.input :staff_type, as: :select, collection: StaffMember.staff_types, value_method: :first %>
  <% if f.object.image_file.url %>
    <%= f.label :current_image %>
    <img src="<%= f.object.image_file.url %>" />
  <% end %>
  <%= f.input :image_file, as: :file %>
  <%= f.input :bio, as: :text, input_html: { rows: 8 } %>
  <%= f.button :submit, t('ui.save'), name: nil %>
<% end %>
