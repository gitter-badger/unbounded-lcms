<% set_page_title 'Curriculum Tree Manager' %>

<div class=o-page>

  <h1 class=text-center>Curriculum Trees</h1>

  <div class=row>
    <div class='flex-pull-right'>
      <%#= link_to t('.new_tree'), :new_admin_curriculum_tree, class: 'button primary' %>
    </div>
    <table class=table>
      <tr>
        <th>Name
        <th>Last Update
        <th>Default
        <th>
        <th>
      </tr>

      <% @curriculum_trees.each do |curriculum_tree| %>
        <tr id=curriculum_<%= curriculum_tree.id %>>
          <td><%= curriculum_tree.name %>
          <td><%= curriculum_tree.updated_at.to_s %>
          <td><%= curriculum_tree.default? ? '(Default)' : '-' %>
          <td><%= link_to [:edit, :admin, curriculum_tree], class: 'button small primary', target: '_blank' do %>
                <i class='fa fa-pencil'></i>
              <% end %>
          <td><%= button_to t('ui.delete'), admin_curriculum_tree_path(curriculum_tree), class: 'button small alert', data: { confirm: t('ui.are_you_sure') }, form_class: 'inline', method: :delete %>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="row">
    <div class='col-sm-12 text-center'>
      <%= will_paginate @curriculum_trees, renderer: BootstrapPagination::Rails %>
    </div>
  </div>

</div>
