<% url = @category.new_record? ? :admin_download_categories : admin_download_category_path(@category) %>

<%= simple_form_for @category, url: url, html: { id: 'download_category_form' } do |f| %>

  <%= f.input :title, label: t('admin.download_categories.edit.title') %>

  <%= f.input :description, label: t('admin.download_categories.edit.description') %>

  <%= f.input :long_description, as: :ckeditor, input_html: { rows: 10 }, label: t('admin.download_categories.edit.long_description') %>

  <%= f.input :position, label: t('admin.download_categories.edit.position') %>

  <%= f.input :bundle, as: :boolean, label: t('admin.download_categories.edit.bundle') %>

  <%= f.button :submit, t('ui.save'), name: nil %>

<% end %>
