<div class="o-page__section cs-bg--<%= lesson_document.color_code_grade %> u-br-top-right--base">
  <div class="o-content-title u-text--capitalized">
    <%= lesson_document.full_breadcrumb %>
  </div>
</div>
<div class="o-page__section u-padding-top--gutter u-bg--light u-br-top-right--base u-br-bottom--base">
  <div class="c-ld-header">
    <div class="c-ld-header__content">
      <div class="o-resource-title__title">
        <div class="o-title u-text--uppercase">
          <span class="o-title__type cs-txt--<%= lesson_document.color_code %>"><%= lesson_document.short_title %></span>
        </div>
        <h1><%= lesson_document.title %></h1>
        <div class="u-txt--teaser o-social-sharing__teaser">
          <%= raw(lesson_document.teaser) %>
        </div>
        <div class="u-padding-top--large">
          <% if lesson_document.standards.present? %>
            <p><strong>Standards: </strong><%= lesson_document.standards %></p>
          <% end %>
          <% if lesson_document.math_practice.present? %>
            <p><strong>Mathematical Practice Standards: </strong><%= lesson_document.math_practice %></p>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <hr class="c-ld-header__hr">
</div>
