<hr class='o-ld-hr--l2'>

<div class="o-ld-activity">
  <div>
    <div class="u-text--uppercase cs-txt--math-base u-txt--title-type u-margin-bottom--xs">
      <%= @tmpl[:activity].activity_type %>
    </div>
    <h3 id="<%= @tmpl[:activity].anchor %>" class="o-ld-title c-ld-toc">
      <div class="o-ld-title__title o-ld-title__title--h3"><%= @tmpl[:activity].activity_title %>
        <% if @tmpl[:activity].activity_priority.present? %>
          <span class="o-ld-icon o-ld-icon--priority<%= @tmpl[:activity].activity_priority %>"></span>
        <% end %>
      </div>
      <div class="o-ld-title__time o-ld-title__time--h3"><%= @tmpl[:activity].time.zero? ? '&mdash;' : "#{@tmpl[:activity].time} mins" %></div>
    </h3>

    <% if @tmpl[:activity].activity_metacognition.present? %>
      <div class="o-ld-activity__metacognition u-txt--ld-activity-teaser u-margin-bottom--base">
        <%= @tmpl[:activity].activity_metacognition %>
      </div>
    <% end %>

    <% if @tmpl[:activity].activity_guidance.present? %>
      <div class="o-ld-activity__guidance">
        <strong class="o-ld-activity__guidance--title u-text--uppercase cs-txt--math-base u-txt--title-type">Guidance: </strong>
        <%= @tmpl[:activity].activity_guidance %>
      </div>
    <% end %>

    <% if @tmpl[:activity].activity_standard.present? %>
      <p><strong>Standard: </strong>
        <% @tmpl[:activity].activity_standard_info.each do |activity| %>
          <% id = "cg-k_#{SecureRandom.hex(4)}" %>
          <span class="c-ld-keyword" data-toggle="<%= id %>"><%= activity[:standard] %></span>
          <% if activity[:description] %>
            <span class="dropdown-pane c-ld-dropdown" data-dropdown data-hover="true"
              data-hover-delay="0" data-hover-pane="true" id="<%= id %>">
              <span><%= activity[:description] %></span>
            </span>
          <% end %>
        <% end %>
      </p>
    <% end %>

    <% if @tmpl[:activity].activity_mathematical_practice.present?  %>
      <p><strong>Standards for Mathematical Practice: </strong><%= @tmpl[:activity].activity_mathematical_practice %></p>
    <% end %>

    <div class="o-ld-activity__source">
      <%= @tmpl[:source].html_safe %>
    </div>
  </div>
</div>
