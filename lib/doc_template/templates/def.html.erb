<p>
  <% id = "cg-k_#{SecureRandom.hex(4)}" %>
  <% if @data[:prepend] %>
    <span><%= @data[:prepend] %></span>
  <% end %>
  <span class="c-lesson-keyword" data-toggle="<%= id %>"><%= @definition %></span>
  <% if @description.present? %>
    <span class="dropdown-pane c-lesson-dropdown"
    data-dropdown
    data-hover="true"
    data-hover-delay="0"
    data-hover-pane="true"
    id="<%= id %>">
      <%= @description %>
    </span>
  <% end %>
  <% if @data[:append] %>
    <span><%= @data[:append] %></span>
  <% end %>
</p>
