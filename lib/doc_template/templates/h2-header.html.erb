<h2 id="<%= @tmpl.anchor %>" class='o-ld-title c-ld-toc u-margin-top--large'>
  <span class='o-ld-title__title o-ld-title__title--h2'><%= @tmpl.title %></span>
  <span class='o-ld-title__time o-ld-title__time--h2'><%= @tmpl.time.zero? ? '&mdash;' : "#{@tmpl.time} mins" %></span>
</h2>
<% if @tmpl.try(:lesson_objective) %>
  <h3>Foundational Skills Lesson Summary:</h3>
  <p><%= @tmpl.lesson_objective %></p>
<% end %>
